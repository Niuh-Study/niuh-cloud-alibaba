<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.niuh.config.role.mapper.SysRolePermissionMapper">
    <select id="findByRoleIds" parameterType="list" resultType="com.niuh.config.role.entity.SysRolePermission">
        SELECT * FROM sys_role_permission WHERE role_id in
        <foreach collection="list" open="(" close=")" separator="," item="id">
            #{id}
        </foreach>
    </select>

</mapper>